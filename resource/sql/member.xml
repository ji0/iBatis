<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="member">
	<typeAlias alias="MemberVo" type="com.sds.icto.vo.MemberVO" />


	<select id="getMember" resultClass="MemberVo" parameterClass="MemberVo">
		<![CDATA[
		select * 
		from member 
		where email = #email# and password = #password#
		]]>
	</select>

	<select id="getMember2" resultClass="MemberVo" parameterClass="java.lang.String">
		<![CDATA[
		select * 
		from member 
		where email = #value#
		]]>
	</select>

	<select id="getMember3" resultClass="MemberVo" parameterClass="java.util.Map">
		<![CDATA[
		select * 
		from member 
		where email = #e# and name = #n#
		]]>
	</select>


	<insert id="insert" parameterClass="MemberVo">
		<![CDATA[
		insert
		  into member
		values ( member_no_seq.nextval, #name#, #email#, #password#, #gender# )
		]]>
	</insert>




</sqlMap> 
